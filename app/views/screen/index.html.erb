<ul id='screen_area'>
</ul>

<input id='comment' type='text'>
<input class='button' id='send' type='button' value='send'>

<script>
  var ws_rails = new WebSocketRails('localhost:3000/websocket');

  // メッセージ受信時の処理
  ws_rails.bind('websocket_screen', function(message){
    var message_li = document.createElement('li');
    message_li.textContent = message;

    document.getElementById('screen_area').appendChild(message_li);
  });

  document.getElementById('send').onclick = function(){
    var comment = document.getElementById('comment').value;

    ws_rails.trigger('websocket_screen', comment);
  };
</script>
